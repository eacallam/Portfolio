<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

  <%= render 'shared/error_messages' %>

  <%= f.label :username %><br>
  <%= f.text_field :username, placeholder: "Username", class: 'form-control' %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body, size: "60x12", placeholder: "Type the comment text here", class: 'form-control' %><br>

  <%= f.submit class: 'btn btn-primary' %>

<% end %>
